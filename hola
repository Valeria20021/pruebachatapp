    <!-- Incluir JavaScript de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Scripts para manejar los pasos del formulario -->
    <script>
        let currentStep = 0;
        const steps = document.querySelectorAll('.step');
        const nextBtns = document.querySelectorAll('#nextBtn');
        const prevBtns = document.querySelectorAll('#prevBtn');
        const razaSelect = document.getElementById('raza');
        const tipoAnimalSelect = document.getElementById('tipo_animal');

        // Mostrar el paso inicial
        function showStep(n) {
            steps.forEach((step, index) => {
                step.classList.remove('active');
                if (index === n) {
                    step.classList.add('active');
                }
            });
        }

        // Avanzar al siguiente paso
        nextBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                if (currentStep < steps.length - 1) {
                    currentStep++;
                    showStep(currentStep);
                }
            });
        });

        // Retroceder al paso anterior
        prevBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                if (currentStep > 0) {
                    currentStep--;
                    showStep(currentStep);
                }
            });
        });

        // Función para cargar razas desde la API
        function cargarRazas(tipo) {
            razaSelect.innerHTML = '<option value="" disabled selected>Seleccione la raza</option>';
            if (tipo === 'perro') {
                fetch('https://dog.ceo/api/breeds/list/all')
                    .then(response => response.json())
                    .then(data => {
                        const breeds = data.message;
                        for (const breed in breeds) {
                            const option = document.createElement('option');
                            option.value = breed;
                            option.textContent = breed.charAt(0).toUpperCase() + breed.slice(1);
                            razaSelect.appendChild(option);
                        }
                    })
                    .catch(error => console.error('Error al cargar las razas de perros:', error));
            } else if (tipo === 'gato') {
                fetch('https://api.thecatapi.com/v1/breeds')
                    .then(response => response.json())
                    .then(data => {
                        data.forEach(breed => {
                            const option = document.createElement('option');
                            option.value = breed.name;
                            option.textContent = breed.name;
                            razaSelect.appendChild(option);
                        });
                    })
                    .catch(error => console.error('Error al cargar las razas de gatos:', error));
            }
        }

        // Escuchar cambios en el tipo de animal y cargar la raza correspondiente
        tipoAnimalSelect.addEventListener('change', function() {
            const tipo = this.value;
            if (tipo === 'perro' || tipo === 'gato') {
                cargarRazas(tipo);
            } else {
                razaSelect.innerHTML = '<option value="otro">Otro (sin raza específica)</option>';
            }
        });

        // Mostrar el primer paso inicialmente
        showStep(currentStep);
    </script>

</body>
